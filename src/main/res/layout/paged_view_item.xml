<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:greendroid="http://schemas.android.com/apk/res/com.hipipal.android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/cwhite">
	<FrameLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		>
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<greendroid.widget.AsyncImageView
			android:id="@+id/item_thumbnail"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:paddingTop="10.0dip"
			android:layout_marginTop="10.0dip"
			
			android:layout_marginLeft="10.0dip"
			android:layout_marginRight="10.0dip"
			android:paddingBottom="10.0dip"
			
			/>


				<!--Button
				android:layout_marginTop="25.0dip"
				android:gravity="center"
				android:id="@+id/info_box_text2"
				style="@style/gridBox_Title"
				android:text="ok1"
				android:scaleType="centerInside"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/transparent"
				/-->

			
			


		</LinearLayout>
	</FrameLayout>
		<LinearLayout
		android:id="@+id/return_bar_box1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
						<Button
				android:gravity="center"
				android:id="@+id/info_box_text"
				style="@style/gridBox_Title"
				android:text=""
				android:scaleType="centerInside"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="10.0dip"
				android:textSize="18sp"
				android:background="@drawable/transparent"
				/>
		</LinearLayout>	
	<LinearLayout
		android:id="@+id/return_bar_box"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/cgrey6"
		>	
		
				<Button
		android:gravity="center"
		android:id="@+id/download_btn"
		style="@style/gridBox_Title"
    	android:text="@string/download"
		android:background="@drawable/background_button"
		android:paddingTop="10dip"
		android:paddingBottom="10dip"
		android:layout_marginTop="10.0dip"
		android:layout_marginBottom="10.0dip"
		android:layout_marginLeft="50.0dip"
		android:layout_marginRight="50.0dip"
					
		android:layout_width="fill_parent"
		android:scaleType="centerInside"
		android:textColor="@color/cwhite"
		android:textSize="18sp"
		
		android:layout_height="wrap_content"
		/>

	</LinearLayout>	
</LinearLayout>
