<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/topbar"
    >
	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5.0dip"
		android:padding="5.0dip"
		>
		<ImageView 
		android:layout_width="45.0dip"
		android:layout_height="45.0dip"
		android:id="@+id/pImage"
		android:layout_marginRight="5.0dip"
		android:src="@drawable/user_default_photo"
		android:visibility="gone"
		
		/>

        <ImageView 
		android:id="@+id/user_detail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="5dp"
		android:paddingTop="15dp"
		android:src="@drawable/mini_right_tag"
		android:visibility="gone"
		/>
		
		<!-- 用户昵称 -->
		<TextView
			android:id="@+id/pScreenName"
			android:layout_width="fill_parent"
			android:layout_height="20.0dip"
			android:textColor="@color/cwhite3"
			android:textSize="16.0dip"
			android:layout_toRightOf="@id/pImage"
			android:text=""
			android:layout_marginTop="5.0dip"
			/>
			
			<TextView
			android:id="@+id/user_sign"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="12.0dip"
			android:layout_toRightOf="@id/pImage"
			android:layout_below="@id/pScreenName"
			android:text=""
			android:textColor="@color/cwhite3"
		/>
		
	</RelativeLayout>    
</LinearLayout>